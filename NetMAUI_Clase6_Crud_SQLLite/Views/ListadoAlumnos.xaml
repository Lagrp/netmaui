<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NetMAUI_Clase6_Crud_SQLLite.Views.ListadoAlumnos"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mo="clr-namespace:NetMAUI_Clase6_Crud_SQLLite.Models"
    xmlns:te="clr-namespace:NetMAUI_Clase6_Crud_SQLLite.Views.Templates"
    xmlns:vm="clr-namespace:NetMAUI_Clase6_Crud_SQLLite.ViewModels"
    Title="ListadoAlumnos"
    x:DataType="vm:AlumnosViewModels">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Listado de Alumnos:"
            VerticalOptions="Center" />
        <HorizontalStackLayout>
            <ImageButton Command="{Binding ListarAlumnosCommand}" Source="list.png" />
            <ImageButton Command="{Binding AddNewCommand}" Source="addnew.png" />
        </HorizontalStackLayout>
        <CollectionView
            x:Name="collectionView"
            BindingContext="{Binding Alumnos}"
            ItemsSource="{Binding}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <te:ItemsAlumnos />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>