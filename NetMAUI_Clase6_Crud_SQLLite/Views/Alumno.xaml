<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetMAUI_Clase6_Crud_SQLLite.Views.Alumno"
             xmlns:vm="clr-namespace:NetMAUI_Clase6_Crud_SQLLite.ViewModels"
             x:DataType="vm:AlumnoViewModels"
             Title="Alumno">
    <VerticalStackLayout>
      <Label Text="Nombre:"/>
      <Entry Text="{Binding Nombre}"/>
        <Label Text="Apellido:"/>
      <Entry Text="{Binding Apellido}"/>
      <Button Text="Guardar" Command="{Binding GuardarAlumnoCommand}"/>

         <CollectionView ItemsSource="{Binding Errores}">


        </CollectionView>

    </VerticalStackLayout>
    
       
    
</ContentPage>
